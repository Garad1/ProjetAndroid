<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adamgarcia.enu.fragments.EtudiantFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/ET_etu_login"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:hint="Adresse email"
            android:background="@drawable/border_edit"
            android:layout_gravity="center"/>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/ET_etu_password"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:hint="Mot de passe"
            android:layout_gravity="center"
            android:background="@drawable/border_edit"/>


        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/ET_etu_Confirmpassword"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:hint="Confirmation"
            android:layout_gravity="center"
            android:background="@drawable/border_edit"/>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/ET_etu_firstname"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:hint="Prénom"
            android:layout_gravity="center"
            android:background="@drawable/border_edit"/>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/ET_etu_name"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:hint="Nom"
            android:layout_gravity="center"
            android:background="@drawable/border_edit"/>


        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/ET_etu_birthday"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:hint="Date de naissance"
            android:layout_gravity="center"
            android:background="@drawable/border_edit"/>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/ET_etu_class"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:layout_height="30dp"
            android:hint="Classe"
            android:layout_gravity="center"
            android:background="@drawable/border_edit"/>


        <Button
            android:id="@+id/BU_etu_validation"
            android:layout_marginTop="15dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Validation"/>

        <Button
            android:id="@+id/BU_etu_goConnect"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:text="J'ai déjà un compte"
            android:textColor="#FF0000"/>


    </LinearLayout>



</FrameLayout>
